# Mapbox Access Token (REQUIRED)
# Get your token from: https://account.mapbox.com/
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# CORS Allowed Origins (REQUIRED for production)
# Comma-separated list of origins that can access the API
# Must include: Forma app URL + your app's public URL
# Example: https://app.autodeskforma.eu,https://forma-trees.henn.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Directus Configuration (REQUIRED for user auth and project sync)
DIRECTUS_URL=https://your-directus-instance.com
DIRECTUS_STATIC_TOKEN=your-directus-static-token

# Backend tokens (Optional - used by Express for Forma API if needed)
# BEARER_TOKEN=your_forma_bearer_token_here
# REFRESH_TOKEN=your_forma_refresh_token_here
# FORMA_PROJECT_ID=your_project_id_here
# CLIENT_ID=your_client_id_here
# CLIENT_SECRET=your_client_secret_here

# Frontend fallbacks (Optional - in case SDK methods fail)
# VITE_BEARER_TOKEN=your_forma_bearer_token_here
# VITE_FORMA_PROJECT_ID=your_project_id_here

# Session Configuration
SESSION_SECRET=your-secure-random-string-change-in-production
SESSION_COOKIE_SECURE=false  # Set to true for HTTPS/iframe
SESSION_COOKIE_SAMESITE=lax  # Use 'none' for cross-origin iframe